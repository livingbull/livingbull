.navbar.navbar-inverse.navbar-static-top
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Mike Bull | @livingbull', root_path, class: 'navbar-brand'

    .navbar-collapse.collapse
      %ul.nav.navbar-nav
        %li= link_to raw("<i class='icon-home'></i> Home"), root_path
        %li= link_to 'Software', software_path
        %li= link_to 'Photo Gallery', photo_gallery_path

        - if user_signed_in?
          %li.dropdown
            = link_to 'Admin', '#', data: {toggle: 'dropdown'}, class: 'dropdown-toggle'
            %ul.dropdown-menu
              %li= link_to 'Photos', photos_path
              %li= link_to 'Adventures', adventures_path
              %li= link_to 'Users', users_path
              %li.edit= link_to 'Profile', edit_user_registration_path

        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
            Contact
            %b.caret
          %ul.dropdown-menu
            %li= link_to raw("<i class='icon-twitter'></i> Twitter"), 'https://twitter.com/livingbull', target: :blank
            %li= link_to raw("<i class='icon-linkedin'></i> Linked In"), 'http://www.linkedin.com/pub/mike-bull/5/9a0/9bb', target: :blank

        - unless user_signed_in?
          %li.signup= link_to 'Sign Up', new_user_registration_path

        - if user_signed_in?
          %li.logout= link_to 'Logout', destroy_user_session_path, method: :delete
        - else
          %li.login= link_to 'Login', new_user_session_path